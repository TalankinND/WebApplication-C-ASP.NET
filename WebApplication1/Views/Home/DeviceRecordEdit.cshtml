@model WebApplication1.Models.DeviceListModel

@{
    ViewData["Title"] = "Изменение записи";
}

<h1></h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DeviceRecordEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DeviceID" />
            <div class="form-group">
                <label asp-for="DeviceName" class="control-label">Наименование устройства</label>
                <input asp-for="DeviceName" class="form-control" />
                <span asp-validation-for="DeviceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeviceShortName" class="control-label">Сокращённое наименование устройства</label>
                <input asp-for="DeviceShortName" class="form-control" />
                <span asp-validation-for="DeviceShortName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeviceType" class="control-label">Тип устройства</label>
                <input asp-for="DeviceType" class="form-control" />
                <span asp-validation-for="DeviceType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Подтвердить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Отмена</a>
</div>

